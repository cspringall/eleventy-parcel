<!DOCTYPE html>
<html lang="en-GB">
  {% set pathToLinkedFiles = '.' %}
  {% include "./partials/siteHead.njk" %}

  <body>
    <div class="hidden">
      {% include './partials/sprite.svg' %}
    </div>

    {% set showHomeLink = true %}
    {% include "./partials/header.njk" %}

    <div class="c-hero">
      <div class="container">
        <h1 class="c-hero__heading">{{ pageTitle }}</h1>
        <div class="c-hero__desc">
          <p>{{ metadata.description }} âœ¨</p>
          <div class="c-hero__link-wrapper">
            <a class="c-hero__link" href="/blog">
              Blog
            </a>
          </div>
          <div class="c-hero__link-wrapper">
            <a class="c-hero__link c-hero__link--about" href="/about">About</a>
          </div>
          <div class="c-hero__link-wrapper">
            <a class="c-hero__link c-hero__link--icon" href="{{ metadata.codepenUrl }}">
              Codepen
              <svg xmlns="http://www.w3.org/2000/svg" width="30" height="30">
                <use href="#codepen"/>
              </svg>
            </a>
          </div>
        </div>
      </div>
    </div>

    {{ content | safe }}

    {% include "./partials/footer.njk" %}

    <!--JS-->
    <script src="./index.js"></script>
  </body>
</html>